{
  "compilerOptions": {
    "outDir": "./server",
    "target": "es2019",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "baseUrl": ".",
    "types": ["webpack-env", "vue-cli-plugin-apollo/types", "vue-apollo/types"],
    "paths": {
      "@i/*": ["interfaces/*"],
      "@s/*": ["apollo-server/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["apollo-server/**/*.ts", "interfaces/**/*.ts"],
  "exclude": ["node_modules", "src", "iisnode_server.js"]
}
